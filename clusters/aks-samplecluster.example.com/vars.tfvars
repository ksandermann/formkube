////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////MANDATORY//////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

platform_rg_name="aks-samplecluster.example.com"
platform_location="westeurope"

cluster_name="aks-samplecluster"
cluster_domain="example.com"

aks_nodes_pub_key_controller_path="~/.ssh/aks-samplecluster.example.com.pub"

platform_staging_environment="prd"

aks_cluster_k8s_version = "1.13.7"

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////////////////////////OPTIONAL///////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

/////////////////////////////////////////////////////PLATFORM///////////////////////////////////////////////////////////

platform_resource_tags_additional={"ClusterVersion" = "K8S_13.7"}

/////////////////////////////////////////////////////AKS NODES//////////////////////////////////////////////////////////

aks_nodes_amount="3"
aks_nodes_vm_type="Standard_D4s_v3"
aks_nodes_vm_prefix="node"
aks_nodes_admin_username="clusteradmin"
aks_nodes_os_disk_size_gb="200"


/////////////////////////////////////////////////////LOADBALANCER///////////////////////////////////////////////////////

loadbalancer_dns_name="alb"

loadbalancer_dns_ttl="300"

loadbalancer_dns_default_cnames=["api", "cluster", "logs", "elastic", "kibana", "hawkular-metrics", "registry", "dashboard"]
loadbalancer_dns_additional_cnames=["os"]

loadbalancer_dns_ops_default_cnames=["kibana", "elastic", "grafana", "prometheus"]
loadbalancer_dns_ops_additional_cnames=[]

